{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "red",
                    "powerline_symbol": "\ue0b0",
                    "style": "plain",
                    "template": "\uf0e7 ",
                    "type": "root"
                },
                {
                    "foreground": "#899CA1",
                    "properties": {
                        "folder_icon": "\ue5ff",
                        "folder_separator_icon": "/",
                        "home_icon": "\ueb06",
                        "style": "agnoster"
                    },
                    "template": "\ue5ff {{ .Path }}",
                    "style": "plain",
                    "template": "{{ .Path }}",
                    "type": "path"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3
}
