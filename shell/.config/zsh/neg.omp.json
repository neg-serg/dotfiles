{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "foreground": "red",
                    "powerline_symbol": "\ue0b0",
                    "style": "plain",
                    "template": "\uf0e7 ",
                    "type": "root"
                },
                {
                    "foreground": "#395573",
                    "properties": {
                        "folder_icon": "\ue5ff",
                        "folder_separator_icon": "/",
                        "max_width": 40,
                        "truncation_symbol": "…" ,
                        "cycle": [
                            "#287373",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1",
                            "#899CA1"
                        ]
                    },
                    "template": "\ue5ff {{ .Path }} ❯>",
                    "enable_hyperlink": true,
                    "show_git_root": true,
                    "type": "path"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3
}
