[general]
# Startup mode: viewer | slideshow | gallery
mode = viewer
# Show window decorations (borders, titlebar)
decoration = no
# Actions for SIGUSR1/SIGUSR2
sigusr1 = reload
sigusr2 = next_file
# Wayland app_id
app_id = swayimg
size = 1200,800

[viewer]
# Background fill: auto | extend | mirror | #RGBA
window = extend
# Background for transparent images
transparency = #0A14F708
# Initial zoom: optimal | width | height | fit | fill | real | keep
scale = optimal
# Image alignment
position = center
# Image loop and preloading
loop = yes
history = 4
preload = 2

[slideshow]
# Time in seconds between images
time = 3
# (other options same as in [viewer] if needed)

[gallery]
# Thumbnail size in pixels
size = 200
# Cache size for thumbnails
cache = 200
# Preload thumbnails
preload = yes
# Persistent storage for thumbnails
pstore = yes
# Fill thumbnails to cell size
fill = yes
# Anti-aliasing for thumbnails
antialiasing = mks13
# Colors
window = #00000000
background = #202020ff
select = #404040ff
border = #000000ff
shadow = #000000ff

[list]
# File order: none | alpha | numeric | mtime | size | random
order = alpha
reverse = no
# Search subdirectories
recursive = no
# Include hidden files
all = no
# Monitor FS changes and update list automatically
fsmon = yes

[font]
# Font name
name = monospace
# Font size in px
size = 14
# Font color
color = #ccccccff
# Text shadow
shadow = #000000d0
# Font background
background = #00000000

[info]
# Show info overlay
show = yes
# Timeouts for info/status (seconds)
info_timeout = 5
status_timeout = 3

[info.viewer]
top_left     = +name,+format,+filesize,+imagesize,+exif
top_right    = index
bottom_left  = scale,frame
bottom_right = status

[info.gallery]
top_left     = +dir,+name
top_right    = index
bottom_left  = none
bottom_right = status

# ── Key bindings ───────────────────────────────────────────────────────────────
# Format: [keys.viewer] / [keys.gallery] / [keys.slideshow]
# Left side = key, right side = action(s), separated by “;”

[keys.viewer]
# File navigation
n        = next_file
p        = prev_file
g        = first_file
G        = last_file
# Zoom and panning
0        = zoom real
h        = step_left
l        = step_right
k        = step_up
j        = step_down
# Misc
f        = fullscreen
r        = reload
a        = antialiasing
i        = info
q        = exit

[keys.gallery]
# Instead of unsupported 'open_selected', use mode switch
Enter    = mode viewer
BackSpace= exit
# Grid navigation and paging
h        = step_left
l        = step_right
k        = step_up
j        = step_down
PageUp   = page_up
PageDown = page_down
# Misc
r        = reload
i        = info

[keys.slideshow]
Space    = pause
f        = fullscreen
q        = exit
