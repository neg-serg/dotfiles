[general]
mode = viewer # Startup mode: viewer | slideshow | gallery
decoration = no # Show window decorations (borders, titlebar)
# Actions for SIGUSR1/SIGUSR2
sigusr1 = reload
sigusr2 = next_file
# Wayland app_id
app_id = swayimg
size = 1200,800
position = auto # Window position: auto | X,Y

[viewer]
window = extend # Background fill: auto | extend | mirror | #RGBA
transparency = #080A14F7 # Background for transparent images
scale = optimal # Initial zoom: optimal | width | height | fit | fill | real | keep
position = center # Image alignment
antialiasing = mks13 # Anti-aliasing: none | box | bilinear | bicubic | mks13
# Image loop and preloading
loop = yes
history = 4
preload = 2

[slideshow]
# Time in seconds between images
time = 3
# (other options same as in [viewer] if needed)

[gallery]
size = 200 # Thumbnail size in pixels
cache = 8000 # Cache size for thumbnails
preload = yes # Preload thumbnails
pstore = yes # Persistent storage for thumbnails
fill = yes # Fill thumbnails to cell size
antialiasing = mks13 # Anti-aliasing for thumbnails
# Colors
window = #00000000
background = #202020ff
select = #404040ff
border = #000000ff
shadow = #000000ff

[list]
# File order: none | alpha | numeric | mtime | size | random
order = alpha
reverse = no
recursive = no # Search subdirectories
all = no # Include hidden files
fsmon = yes # Monitor FS changes and update list automatically

[font]
name = Iosevka # Font name
size = 14 # Font size in px
color = #ccccccff # Font color
shadow = #000000d0 # Text shadow
background = #00000000 # Font background

[info]
show = yes # Show info overlay
info_timeout = 5 # Timeouts for info/status (seconds)
status_timeout = 3

[info.viewer]
top_left     = +name,+format,+filesize,+imagesize,+exif
top_right    = index
bottom_left  = scale,frame
bottom_right = status

[info.gallery]
top_left     = +dir,+name
top_right    = index
bottom_left  = none
bottom_right = status

# ── Key bindings ───────────────────────────────────────────────────────────────
# Format: [keys.viewer] / [keys.gallery] / [keys.slideshow]
# Left side = key, right side = action(s), separated by “;”

[keys.viewer]
# File navigation
n        = next_file
p        = prev_file
g        = first_file
G        = last_file
# Zoom and panning
=        = zoom +10
-        = zoom -10
0        = zoom real
h        = step_left
l        = step_right
k        = step_up
j        = step_down
# Misc
f        = fullscreen
r        = reload
a        = antialiasing
i        = info
q        = exit

[keys.gallery]
# Instead of unsupported 'open_selected', use mode switch
Enter    = mode viewer
BackSpace= exit
# Grid navigation and paging
h        = step_left
l        = step_right
k        = step_up
j        = step_down
PageUp   = page_up
PageDown = page_down
# Change thumbnail size
=        = thumb +16
-        = thumb -16
# Misc
r        = reload
i        = info

[keys.slideshow]
Space    = pause
f        = fullscreen
q        = exit
