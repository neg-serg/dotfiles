video/*; /usr/bin/mpv -really-quiet -msglevel all=0 %s 2>/dev/null;
application/pdf; pdftotext -layout %s - | ${PAGER:-less}; copiousoutput;
application/gpg; /usr/bin/gpg --decrypt %s; copiousoutput;

# HTML: lightweight terminal browser (inline in pager)
text/html; w3m -T text/html -dump %s; copiousoutput;
# Optional: open HTML externally in your terminal if desired
#text/html; $XDG_CONFIG_HOME/mutt/mutt_bgrun ${TERMINAL:-foot} -e w3m %s;

# Images: render to ANSI for terminal preview
image/*; chafa --fill=block --symbols=block --size=80x40 %s; copiousoutput;
