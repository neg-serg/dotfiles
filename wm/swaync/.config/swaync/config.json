{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "bottom",
  "cssPriority": "user",

  "control-center-width": 800,
  "control-center-height": 460, 
  "control-center-margin-top": 2,
  "control-center-margin-bottom": 2,
  "control-center-margin-right": 1,
  "control-center-margin-left": 0,

  "notification-window-width": 800,
  "notification-icon-size": 200,
  "notification-body-image-height": 350,
  "notification-body-image-width": 250,

  "timeout": 4,
  "timeout-low": 2,
  "timeout-critical": 6,
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 100,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": ["label", "buttons-grid", "mpris", "title", "notifications"],
  "widget-config": {
    "title": { "text": "Notifications", "clear-all-button": true, "button-text": "󰎟" },
    "label": { "max-lines": 1, "text": " " },
    "mpris": { "image-size": 128, "image-radius": 10 },
    "volume": { "label": "󰕾", "show-per-app": true },
    "buttons-grid": { "actions": [ { "label": " ", "command": "amixer set Master toggle" }, { "label": "", "command": "amixer set Capture toggle" } ] }
  }
}
