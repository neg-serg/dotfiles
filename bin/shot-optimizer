#!/bin/sh
# shot-optimizer: convert new BMP screenshots to PNG and remove BMP
# Usage: shot-optimizer
#   Watches ~/pic/shots for new .bmp files, converts them to .png and deletes .bmp
if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
  sed -n '2,4p' "$0" | sed 's/^# \{0,1\}//'; exit 0
fi
source /etc/profile
shots=$HOME/pic/shots
command -v parallel>/dev/null || exit 1
[ ! -d "$shots" ] && mkdir "$shots"
if [ -n "$shots" ]; then
    inotifywait -q -m -e CREATE "$shots"/ | while read -r _; do
    find "$shots" -name "*.bmp" \
        -not -path "$XDG_PICTURES_DIR/.git/*" \
        -not -path "$XDG_PICTURES_DIR/.git" \
        | parallel convert -quality 10 '{}' '{.}.png'
    sleep 3
    find "$shots" -name "*.bmp" \
        -not -path "$XDG_PICTURES_DIR/.git/*" \
        -not -path "$XDG_PICTURES_DIR/.git" \
        -delete
    done
fi
